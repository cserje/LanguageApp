<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageKing.CategoryChoosingPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
        <Picker x:Name="categoryPicker"
                            SelectedIndexChanged="OnCategoryChanged"
                            HorizontalOptions="Center"
                            ItemsSource="{Binding Categories}"
                
                        >

        </Picker>
        <Button x:Name="nextButton" Clicked="nextButton_Clicked"></Button>
    </StackLayout>
</ContentPage>