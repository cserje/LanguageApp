<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageKing.Statistics">
    <StackLayout Orientation="Vertical">
      
        <StackLayout Orientation="Horizontal">
            <Label Text="{Binding CorrectWordsText}"></Label>
            <Label x:Name="correctWordLabel" Text="{Binding CorrectWordsCount}"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="{Binding IncorrectWordsText}"></Label>
            <Label x:Name="incorrectWordLabel" Text="{Binding IncorrectWordsCount}"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="{Binding PercentageText}"></Label>
            <Label x:Name="percentageLabel" Text="{Binding PercentageValue}"></Label>
        </StackLayout>

    </StackLayout>
</ContentPage>