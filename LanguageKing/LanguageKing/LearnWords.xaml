<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageKing.LearnWords">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="10, 30, 10, 10"
                    Android="10, 10, 10, 10"
                    WinPhone="10, 10, 10, 10" />
    </ContentPage.Padding>
    <StackLayout Orientation="Vertical" Spacing="20">
    <Label x:Name="questionLabel" Text="{Binding QuestionText}" FontSize="Medium" ></Label>
        <Label x:Name="answerLabel" Text="{Binding AnswerText}" FontSize="Medium"></Label>
       <Button x:Name="listenButton" Text="{Binding ListenButtonText}" Clicked="ListenButtonClicked" HorizontalOptions="Start" BorderRadius="140"></Button>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Button x:Name="backButton" Text="{Binding BackButtonText}" Clicked="BackButtonClicked" HorizontalOptions="FillAndExpand" ></Button>
            <Button x:Name="nextButton" Text="{Binding NextButtonText}" Clicked="NextButtonClicked" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>